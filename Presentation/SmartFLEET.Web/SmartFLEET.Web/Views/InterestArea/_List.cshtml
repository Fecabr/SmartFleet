@using SmartFLEET.Web.HtmlHelpers


    <table id="dg"  style="width:100%;height:320px"
           toolbar="#toolbar" pagination="true" idField="id"
           rownumbers="true"   url="@Url.Action("GetZones")" class="easyui-datagrid" fitColumns="true" singleSelect="true">
        <thead>
        <tr>
            <th field="Name" width="50" editor="{type:'validatebox',options:{required:true}}"> Zone</th>
            <th field="Country" width="50" editor="{type:'validatebox',options:{required:true}}">Pays</th>
            <th field="State" width="50" editor="{type:'validatebox',options:{required:true}}">Département</th>
            <th field="Street" width="50" editor="{type:'validatebox',options:{required:true}}">Adresse</th>
            <th field="Latitude" width="50" editor="{type:'validatebox',options:{required:true}}">Latitude</th>
            <th field="Longitude" width="50" editor="{type:'validatebox',options:{required:true}}">Longitude</th>

        </tr>
        </thead>
    </table>

    <div id="toolbar">
        <a  class="easyui-linkbutton" iconCls="icon-add" plain="true" ng-click="addZone()">Nouvelle zone</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">Modifier</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyUser()">Supprimer</a>
    </div>

<div id="zone-win"   class="easyui-window" data-options="left:320,top:20" title="Nouvelle zone" style=" bottom: 0; padding: 10px; width: 40%; height: 500px;z-index: 1001">

        @{
            Html.RenderPartial("_Create");
        }
    </div>


